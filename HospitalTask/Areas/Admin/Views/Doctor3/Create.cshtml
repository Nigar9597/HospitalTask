@using HospitalTask.Models
@model Doctor3

<form asp-action="Create" method="post" enctype="multipart/form-data">

   
    <div class="form-group" > 

        <div class="form-group">
            <label asp-for="ImageUpload" class="form-label"></label>
            <input class="form-control" asp-for="ImageUpload" id="formFile">
        </div>


        <label asp-for="Name"> </label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Department3Id"> </label>
        <input asp-for="Department3Id" class="form-control">
        <span asp-validation-for="Department3Id" class="text-danger"></span>



    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
